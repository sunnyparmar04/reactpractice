doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Login Form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9' crossorigin='anonymous')
.container.mt-5
  .row
    .col-6.offset-3
      .card.shadow
        .card-header.text-bg-info
          h1
            | Login Form
        .card-body
          form(action='/login' method='post')
            .form-group
              label.form-label(for='') Enter your email
              input.form-control(type='email' name='email' required='')
            .form-group
              label.form-label(for='') Enter your Password
              input.form-control(type='password' name='password' required='')
            .form-group.text-end.mt-4
              input.btn.btn-info(type='submit' value='Login')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm' crossorigin='anonymous')



